<div class="container-user">
    <h2>Change password</h2>

    <table>
    <form>

            <tr>
                <td>Password :</td>
                <td><input type="password" id="password" size="15" maxlength="128"
                           placeholder="password" required autofocus >
                </td>
            </tr>
            <tr>
                <td>New password :</td>
                <td><input type="password" id="newPassword" size="15" maxlength="128"
                           placeholder="new password" required >
                </td>
            </tr>
            <tr>
                <td>Confirm password :</td>
                <td><input type="password" id="confirmPassword" size="15" maxlength="128"
                           placeholder="confirm" required >
                </td>
            </tr>

    </form>
        <tr>
            <td></td>
            <td><br></td>
        </tr>
        <tr>
            <td></td>
            <td><button onclick="validPassword($('#password').val(), $('#newPassword').val(), $('#confirmPassword').val())"> Change password </button></td>
        </tr>
    </table>
</div>